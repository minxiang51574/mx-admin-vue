{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.fixAll.stylelint": true
    },
    "eslint.validate": ["javascript", "vue", "html"],
    // 避免veture 和stylelint冲突
    "vetur.validation.style": false,
    "vetur.format.enable": true,
    // "stylelint.enable": true,
    // // 关闭VS Code编辑器内置的样式规则检测规范，避免与Stylelint的检测规范重复|冲突
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    // vetur配置项
    // 指定<style lang='scss'>区域格式化使用 prettier | none, 这里设置none是避免和stylelint冲突
    "vetur.format.defaultFormatter.scss": "none",
    "vetur.format.defaultFormatter.css": "none",
    "vetur.format.defaultFormatter.sass": "none",
    // 指定<template>区域格式化使用 prettyhtml
    "vetur.format.defaultFormatter.html": "prettyhtml",
    // "vetur.format.defaultFormatter.html": "js-beautify-html",
    // 指定<script>区域格式化使用 prettier
    "vetur.format.defaultFormatter.js": "prettier",
    // 所有默认格式化程序的选项
    "vetur.format.defaultFormatterOptions": {
      "js-beautify-html": {
        "wrap_attributes": "force-aligned" //属性强制折行对齐
      },
      "prettyhtml": {
        "printWidth": 200, // 超过最大值换行
        "tabWidth": 2, // 缩进字节数
        "useTabs": false, // 缩进不使用tab，使用空格
        "singleQuote": false, // 使用单引号代替双引号
        "wrapAttributes": true, // 属性自动换行
        "sortAttributes": true // 属性自动开启排序
      }
    },
    // 指定 *.vue 文件的格式化工具为vetur，防止和prettier冲突
    "[vue]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "fileheader.customMade": {
      "Date": "Do not edit" // 文件创建时间(不变)
    },
    // 插件配置项
    "fileheader.configObj": {
      "wideSame": true, // 头部注释等宽设置
      "wideNum": 13, // 头部注释字段长度 默认为13
      "functionWideNum": 0, // 函数注释等宽设置 设为0 即为关闭
      "moveCursor": true, // 自动移动光标到Description所在行
      "dateFormat": "YYYY-MM-DD HH:mm:ss", // YYYY-MM-DD HH:mm:ss
      "switch": {
        "newlineAddAnnotation": true // 默认遇到换行符(\r\n \n \r)添加注释符号
      },
      "createHeader": true // 新建文件自动添加头部注释
    },
    "eslint.format.enable": true,
    "git.ignoreLimitWarning": true
  }
  